<%= error_messages_for(f.object) %>

<div class="form-group">
  <%= f.label :email %>
  <%= f.text_field :email, class: "form-control", placeholder: "Please enter an email" %>
  <% if @user.errors[:email].present? %>
    <small id="emailHelp" class="form-text text-danger"><%= raw @user.errors.full_messages_for(:email).join("<br>") %></small>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control", placeholder: "Please enter a password" %>
  <% if @user.errors[:password].present? %>
    <small id="passwordHelp" class="form-text text-danger"><%= raw @user.errors.full_messages_for(:password).join("<br>") %></small>
  <% end %>
</div>

<div class="form-group">
  <%= f.submit submit_text, class: "btn btn-primary" %>
</div>