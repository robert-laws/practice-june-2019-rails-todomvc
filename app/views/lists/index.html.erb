<div class="row mt-4">
  <div class="col">
    <h3>ToDo MVC - App</h3>
  </div>
</div>
<div class="row">
  <div class="col">
    <hr>
  </div>
</div>
<div class="row">
  <!-- list begin -->
  <div class="col border my-1 mx-4 p-4 bg-dark text-white rounded shadow">
    <h4 class="mt-n2">All Lists</h4>
    <ul class="list-group text-dark">
      <li class="list-group-item py-3">
        <%= form_for @list do |f| %>
          <div class="form-row">
            <div class="col">
              <%= f.text_field :name, class: "form-control", placeholder: "#{@list.errors.full_messages_for(:name).first || 'Add a New List Name'}" %>
            </div>
          </div>
        <% end %>
      </li>
      <% @lists.each do |list| %>
        <li class="list-group-item py-3">
          <%= link_to make_title_case(list.name), list_path(list) %>
          <span class="float-right">
            <%= button_to list_path(list), method: :delete, class: "close" do %>
              <span aria-hidden="true">&times;</span>
            <% end %>
          </span>
        </li>
      <% end %>
    </ul>
  </div>
  <!-- list end -->
</div>