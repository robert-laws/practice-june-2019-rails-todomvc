<div class="row mt-4">
  <div class="col">
    <h3>ToDo MVC - App</h3>
  </div>
</div>
<div class="row">
  <div class="col">
    <% @lists.each do |list| %>
      <%= list.name %>
    <% end %>
  </div>
</div>
<div class="row">
  <!-- list begin -->
  <div class="col border my-1 mx-4 p-4 bg-dark text-white rounded shadow">
    <h4 class="mt-n2">List Title</h4>
    <ul class="list-group text-dark">
      <li class="list-group-item py-3">
        <form>
          <div class="form-row">
            <div class="col">
              <input type="text" class="form-control" placeholder="Add a New List">
            </div>
          </div>
        </form>
      </li>
      <% @lists.each do |list| %>
        <li class="list-group-item py-3">
          <%= link_to list.name, list_path(list) %>
        </li>
      <% end %>
    </ul>
  </div>
  <!-- list end -->
</div>