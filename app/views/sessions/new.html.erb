<div class="row mt-5">
  <div class="col">
    <h3>Login</h3>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <%= form_tag(sessions_path) do %>
      <div class="form-group">
        <%= label_tag "Email" %>
        <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Please enter an email" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Login", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col">
    <hr>
  </div>
</div>